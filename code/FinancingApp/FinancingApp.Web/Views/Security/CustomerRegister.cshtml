@model FinancingApp.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "CustomerRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Registeration Form</h2>

@using (Html.BeginForm("CustomerRegister", "Security", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
   <div class="form-group">
            @Html.LabelFor(m => m.Customer.SSN, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Customer.SSN, new { @class = "form-control" })
            </div>
       </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Address.AddressLine1, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address.AddressLine1, new { @class = "form-control" })
            </div>
       </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Address.AddressLine2, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address.AddressLine2, new { @class = "form-control" })
            </div>
       </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Address.City, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
            </div>
       </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Address.State, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address.State, new { @class = "form-control" })
            </div>
       </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Address.Zipcode, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address.Zipcode, new { @class = "form-control" })
            </div>
       </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Customer.Phone, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control" })
            </div>
       </div>
    
     <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
    
    
}